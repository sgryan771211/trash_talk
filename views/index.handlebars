<div class="container">

  <div class="text-center p-1">
    <h1 class="font-weight-bold">你想對誰說幹話<i class="fas fa-question"></i></h1>
  </div>

  <form action="/" method="POST">
    <div class="row">
      <div class="card col mx-2 text-center" style="width: 18rem;">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg"
          class="card-img-top" alt="engineer">
        <div class="card-body">
          <div class="card-text custom-control custom-radio mt-5">
            <input type="radio" class="custom-control-input" name="career" id="engineer" value="engineer"
              {{#eq option.career 'engineer'}}checked{{/eq}}>
            <label class="custom-control-label" for="engineer">工程師</label>
          </div>
        </div>
      </div>

      <div class="card col mx-2 text-center" style="width: 18rem;">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg"
          class="card-img-top" alt="designer">
        <div class="card-body">
          <div class="card-text custom-control custom-radio mt-1">
            <input type="radio" class="custom-control-input" name="career" id="designer" value="designer"
              {{#eq option.career 'designer'}}checked{{/eq}}>
            <label class="custom-control-label" for="designer">設計師</label>
          </div>
        </div>
      </div>

      <div class="card col mx-2 text-center" style="width: 18rem;">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg"
          class="card-img-top" alt="entrepreneur">
        <div class="card-body">
          <div class="card-text custom-control custom-radio mt-4">
            <input type="radio" class="custom-control-input" name="career" id="entrepreneur" value="entrepreneur"
              {{#eq option.career 'entrepreneur'}}checked{{/eq}}>
            <label class="custom-control-label" for="entrepreneur">創業家</label>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center p-3">
      <button class="btn btn-secondary btn-lg" type="submit">產生幹話</button>
    </div>

  </form>

  {{#if trashTalk}}
  <div class="alert alert-info" role="alert">
    <h3><code>{{trashTalk}}</code><i class="far fa-grin-squint"></i></h3>
  </div>
  {{/if}}
</div>